<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_order_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_order_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_order_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng: 2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_order_total_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: 20000VND"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="2dp"
        android:text="Ngày đặt: yyyy-MM-dd HH:mm:ss"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="2dp"
        android:text="Địa chỉ nhận: HCMUTE"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_order_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="2dp"
        android:text="Số điện thoại: 0123456789"
        android:textSize="20sp" />
</LinearLayout>